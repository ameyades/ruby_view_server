<%
	def link_to(name, url)
		return "<a href='#{url}'>#{name}</a>"
	end
%>



<html>
  <body>

    <h1>You're using a layout</h1>
    <p>
      <h3> I'm a header</h3>
      <p>Put things in the header</p>
      <%= link_to('This is a link to kloogle', 'http://www.kloog.com') %>
	 <%= link_to('I\'m  excited for this show!', 'https://www.youtube.com/watch?v=Hl4bOuGNMwo') %>

    </p>
    <hr />
    <div>
    		    <form method='post' action="<%= @request.path %>">
      			  First name: <input type="text" name="first_name" placeholder='first name'/><br />
    			  Last name: <input type = "text" name = "last_name" placeholder='last name'/><br />
    			<input type="submit" value="Submit" />
    			</form>
    			
    			
    	  <% if @request.query['first_name'] && !@request.query['first_name'].empty? %>
  			  Hello there <%= @request.query['first_name'] %>
  			<% else %>
    		Enter thy first name
  		<% end %>

		 <% if @request.query['last_name'] && !@request.query['last_name'].empty? %>
  			   <%= @request.query['last_name'] %>
  			<% else %>
    		Enter thy last name
  		<% end %>

      <%= yield %>
    </div>
    <hr />
    <div>
      <h3> I'm a footer</h3>
      <p>Put things in the footer</p>
    </div>
  </body>
</html>